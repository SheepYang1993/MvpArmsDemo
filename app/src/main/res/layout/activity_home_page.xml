<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tl="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/common_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/bg_white"
        tl:tl_iconHeight="23dp"
        tl:tl_iconWidth="23dp"
        tl:tl_indicator_color="@color/green"
        tl:tl_indicator_gravity="TOP"
        tl:tl_indicator_height="0dp"
        tl:tl_textSelectColor="@color/green"
        tl:tl_textUnselectColor="@color/word_gray84"
        tl:tl_textsize="12sp"
        tl:tl_underline_color="@color/split_line_d9"
        tl:tl_underline_gravity="TOP"
        tl:tl_underline_height="@dimen/split_line_height"/>
</LinearLayout>